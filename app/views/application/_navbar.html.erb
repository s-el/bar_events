<div class="navbar">
<div class="navbar-wagon">

<!-- return to home -->
  <div class="navbar-wagon-item">
    <%= link_to root_path class: "navbar-wagon-item navbar-wagon-link" do%>
    After5
    <%end%>
  </div>

  <div class="navbar-search">
    <%= form_tag("/events", class: "form-inline", method: "get") do %>
    <%= text_field_tag(:keyword, params[:keyword], placeholder: "Keyword", class: "form-control") %>
    <%= text_field_tag(:location, params[:location], placeholder: "Location", class: "form-control") %>
    <%= text_field_tag(:date, params[:date], placeholder: "Date", class: "datepicker form-control") %>
    <%= button_tag(type: "submit", class: "btn_nav") do %>
      <i class="fa fa-search" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </div>

  <div class="navbar-wagon-right">
    <%= link_to "Bars", bars_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Events", events_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <div class="navbar-wagon-right">
    <%= link_to "Profile", profile_path, class: "navbar-wagon-item navbar-wagon-link" %>
    </div>

    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% avatar_url = current_user.facebook_picture_url %>
        <% if avatar_url %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
          <div class= "avatar dropdown-toggle", id= "navbar-wagon-menu", data-toggle="dropdown" href="#">
            <i class="fa fa-bars" aria-hidden="true"></i>
          </div>
          <%end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to profile_path do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to root_path do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out hi) -->

      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
  </div>
