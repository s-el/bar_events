<div class="container-form">
<h2>Log in</h2>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn2 btn_signup"%><br />
      <% end -%>
    <% end -%>
    <p class = "disclaimer">Don't worry, we never post on your behalf.</p>
  <p class="line"><span>OR</span><p>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "simple_link" %><br />
      <% end -%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <%= render "devise/shared/links" %>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn2" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<p class = "simple_line">Need to create an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "simple_link_two" %></p>
   <br />
<% end -%>

</div>
