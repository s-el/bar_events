
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(226,226,226,0.1) 20%, rgba(209,209,209,0.6) 60%), url('<%= image_path("banner.jpg") %>');">
  <div class="banner-content">
    <h1>After5</h1>
    <p>Be entertained while you drink</p>
    <%= form_tag("/events", method: "get") do %>
    <%= text_field_tag(:keyword, nil, placeholder: "Keyword") %>
    <%= text_field_tag(:location, nil, placeholder: "Location") %>
    <%= text_field_tag(:date, nil, class: "datepicker") %>
    <%= submit_tag("Search") %>
    <% end %>
  </div>
</div>

